<td><h3>Quantity</h3></td>
<td><h3>Total</h3></td>
<td><h3>Action</h3></td>

</thead>

<% sum = 0 %>
<tbody>
<% @line_items.each do |f| %>
	
	<tr>
	<td>

		<%= f.product.name %>
	</td> 
	<td>
		$<%= f.unit_price %>
	</td>
	<td>
		<%= f.quantity %>
	</td>
	<td>
		$<%= f.unit_price * f.quantity %>
		<% sum = sum + (f.unit_price * f.quantity)  %>
	</td>
	<td>

		<%= link_to "Delete", line_item_path(f), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>


	</td>

	<td>
	<%= link_to "更改" ,f.product %>


    <!-- 一陣錯亂,不知道如何更新購物車 -->
	

	</td>
	</tr>

<% end %>
